<view class="container">
  <view class="body">
    <!-- 输入手机号 -->
    <view class="input-phone">
      <input placeholder="请输入手机号" bindinput="bindPhoneInput"/>
    </view>

    <!-- 发送验证码 -->
    <view class="code">
      <view class="input-code">
        <input placeholder="请输入验证码" bindinput="bindCodeInput"/>
      </view>

      <!-- 验证码按钮 -->
      <view class="send-code-container">
        <view class="send-code">
          <button class="sendcode" bindtap="sendcode" disabled="{{disabled}}">{{verifyText}}</button>
        </view>
      </view>
    </view>

    <!-- 登录按钮 -->
    <view class="login">
      <button type="primary" bindtap="Login">登录</button>
    </view>
  </view>
</view>