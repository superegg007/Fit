.card-head{
  display: block;
  margin-top: 0rpx;
  width: 100%;
  background-color: #8AA5D5;
  height: 60rpx;
  padding-top: 1.3%;
  color: white;
}

.tip-center{
  font-family: PingFangSC-Regular;
  display: inline;
  font-size: 33rpx;
  padding-left: 47%;
}
.card{
  background-color:#f1f1f1;
  padding-top:5%;
  position: relative;
}

.card-pic{
  border: 0.1rpx solid #999; 
  position: absolute;
  width:90%;
  margin-left: 5%;
  border-radius: 5%;
  z-index: 99;
  height: 900rpx;
}
.card-name{
  font-size: 35rpx;
  font-weight: 600;
  color: #444;
  width:450rpx;
  margin-bottom: 3%;
  margin-left: 30%;
}
.card-tips{
  
  margin-top: 30rpx;
  display: inline-block;
  padding: 1% ;
  border:4.6rpx solid #666;
  margin-left: 30rpx;
  border-radius: 7%;
  text-align: center;
  color: #666;
  font-size: 35rpx;
  font-weight: 500;
  letter-spacing:3rpx;
  background-color:white;
  margin-bottom: 25rpx;
}
.card-avatar{
  position: absolute;
  margin-top:10rpx;
  margin-left:55rpx;
  border-radius: 50%;
  width: 150rpx;
  height: 150rpx;
  z-index: 100;
}
.card-detail{
   margin-top: 940rpx;
   margin-right: 5%;
   display: block;
   text-align: right;
   font-weight: 550;
   font-size: 30rpx;
   color: #898989;
  
}

.card-detail image{
  padding-right: 10rpx;
  width: 35rpx;
  height:35rpx;
}
.card-detail text{
  padding-right: 10rpx;
}
.card-like2{
  padding-left: 20rpx;
  display: inline-block;
  font-weight: 550;
  font-size: 30rpx;
  color: #898989;
  display: absolute;
}
.card-desc{
  margin:2% 5%;
  font-size: 35rpx;
  text-align: left;
  color: #888;
  font-weight: 500;
}
.com-head{
  font-weight: bold;
  color:#333;
  
  margin-right: 5%;
  padding: 3% 3%;
  border-bottom: 5rpx solid #f1f1f1;
}
.com-tips{
  display: block;
  border-bottom: 5rpx solid #f1f1f1;
  margin: 2% 5% ;
  width: 85%;
}
.com-avatar{
  display: inline-block;
  width:150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin: 5% 5% 5% 0%;
  vertical-align:top;
  float: left;
}
.com-name{
  display: inline-block;
  margin-top:5%;
  float: center;
  padding-right: 2%;
}
.com-time{
  display: inline-block;
  font-size: 22rpx;
  float: right;
  color: #979797;
  padding-bottom: 3%;
}


.com-mess{
  font-size: 35rpx;
  margin-top:3%;
  padding-bottom: 15%;
  text-align: justify;
  text-justify: auto;
  word-break:break-all;
}
.com-refer{
  color: blue;
  display: inline-block;
